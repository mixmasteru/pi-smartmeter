<phpunit
        bootstrap="bootstrap.php">
    <filter>
        <blacklist>
        </blacklist>
        <whitelist >
            <directory suffix=".php">../src</directory>
            <file>/path/to/file</file>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="./report" charset="UTF-8"
             highlight="false" lowUpperBound="35" highLowerBound="70"/>
    </logging>
</phpunit>